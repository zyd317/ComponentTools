{
  "compilerOptions": {
    "outDir"       : "ts-build",
    "sourceMap"    : true,
    "noImplicitAny": true,
    "module"       : "commonjs",
    "target"       : "es5",
    "lib"          : [ "es2015", "dom" ],
    "jsx"          : "react",
    "esModuleInterop"             : true,
    "allowSyntheticDefaultImports": true,
    // This must be specified if "paths" is set
    "baseUrl": ".",
    // Relative to "baseUrl"
    "paths": {
      "static/*": [
        "./src/static/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": ["./src/**/*", "./test/*", "./index.d.ts"]
}
